<Window x:Class="SatelliteDataProcessingProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SatelliteDataProcessingProject"
        mc:Ignorable="d"
        Title="Data Processing" Height="450" Width="800">
    <Grid Background="#FFCFEEFF">
        <ListView x:Name="Sensors_ListView" d:ItemsSource="{Binding List1}" Margin="10,136,598,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Sensor A" DisplayMemberBinding="{Binding SensorA}"/>
                    <GridViewColumn Header="Sensor B" DisplayMemberBinding="{Binding SensorB}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Load Data" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" Height="43" Width="192" Click="Button_Click"/>
        <Label Content="Sensor A" HorizontalAlignment="Left" Margin="316,29,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
        <ListBox x:Name="SensorA_ListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="366,91,303,10"/>
        <Label Content="Sensor B" HorizontalAlignment="Left" Margin="602,29,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
        <ListBox x:Name="SensorB_ListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="642,91,27,10"/>

        <Label Content="Binary Search Iterative" HorizontalAlignment="Left" Margin="222,91,0,0" VerticalAlignment="Top"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="235,120,0,0" VerticalAlignment="Top" Height="23" Width="102" Click="BinarySearchIterativeA_Button_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="226,147,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

        <Label Content="Binary Search Recursive" HorizontalAlignment="Left" Margin="222,186,0,0" VerticalAlignment="Top"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="235,217,0,0" VerticalAlignment="Top" Height="23" Width="102" Click="BinarySearchRecursive_Button_Click"/>

        <Label Content="Selection Sort" HorizontalAlignment="Left" Margin="244,280,0,0" VerticalAlignment="Top"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="235,311,0,0" VerticalAlignment="Top" Height="23" Width="102" Click="SelectionSort_Button_Click"/>

        <Label Content="Insertion Slot" HorizontalAlignment="Left" Margin="244,369,0,0" VerticalAlignment="Top"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="235,400,0,0" VerticalAlignment="Top" Height="23" Width="102" Click="InsertionSort_Button_Click"/>



    </Grid>
</Window>
